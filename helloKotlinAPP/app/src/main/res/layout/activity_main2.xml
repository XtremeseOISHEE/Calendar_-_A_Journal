<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/bg"
        android:src="@drawable/main"
        android:scaleType="centerCrop"
        android:contentDescription="@null"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:orientation="vertical"
        android:padding="24dp"
        android:background="#80000000"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.7">

        <Button
            android:id="@+id/btnCreateEvent"
            android:text="Create Events"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Space android:layout_width="match_parent" android:layout_height="12dp" />

        <Button
            android:id="@+id/btnCreateJournal"
            android:text="Make Your Journal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Space android:layout_width="match_parent" android:layout_height="12dp" />

        <Button
            android:id="@+id/btnViewEvents"
            android:text="View All Events"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Space android:layout_width="match_parent" android:layout_height="12dp" />

        <Button
            android:id="@+id/btnViewJournals"
            android:text="View All Journals"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
